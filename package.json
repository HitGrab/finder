{
    "name": "@hitgrab/finder",
    "version": "0.1.16-alpha",
    "description": "Headless datatables for things that aren't tables.",
    "type": "module",
    "files": [
        "dist/**/*"
    ],
    "main": "./dist/index.umd.cjs",
    "types": "./dist/index.d.ts",
    "module": "./dist/index.js",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "require": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.umd.cjs"
            }
        },
        "./package.json": "./package.json"
    },
    "scripts": {
        "dev": "vite",
        "build": "vite build && tsc --project tsconfig.production.json",
        "build:docs": "npm --prefix docusaurus run build && rm -r docs && cp -r ./docusaurus/build ./docs && mkdir ./docs/examples && mkdir ./docs/examples/armory && mkdir ./docs/examples/shoes",
        "build:armory": "npm --prefix examples/pixel-armory run build && rm -r ./docs/examples/armory && cp -r ./examples/pixel-armory/dist ./docs/examples/armory",
        "build:shoes": "npm --prefix examples/shoe-store run build && rm -r ./docs/examples/shoes && cp -r ./examples/shoe-store/dist ./docs/examples/shoes",
        "test": "vitest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/HitGrab/finder.git"
    },
    "keywords": [
        "datatable",
        "filter",
        "search",
        "sort",
        "group"
    ],
    "author": "HitGrab Inc.",
    "license": "ISC",
    "sideEffects": false,
    "bugs": {
        "url": "https://github.com/HitGrab/finder/issues"
    },
    "homepage": "https://github.com/HitGrab/finder#readme",
    "devDependencies": {
        "@eslint/js": "^9.36.0",
        "@types/lodash": "^4.17.16",
        "@types/react": "^19.1.3",
        "@vitejs/plugin-react": "^4.3.2",
        "eslint": "^9.36.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "prettier": "^3.6.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.1",
        "vite": "^7.1.9",
        "vite-plugin-checker": "^0.11.0",
        "vitest": "^3.2.4"
    },
    "peerDependencies": {
        "lodash": "^4.17.21",
        "react": ">=18",
        "react-dom": ">=18"
    }
}
